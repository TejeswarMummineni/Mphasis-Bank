
@model IPagedList<Bussiness_Entities.TranscationEnties>
@{
    ViewBag.Title = "ViewTrans";
    Layout = "~/Views/Shared/MphasisBankUI.cshtml";
}
@using PagedList.Mvc;
@using PagedList;
<h2>ViewTrans</h2>
<p>
    @using (Html.BeginForm("ViewTrans", "Home", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
    {
        <label> Search By Accountid</label>
        <input type="text" name="Aid" placeholder="Enter Account Number" />
        <input type="submit" value="Submit" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().TranscationId)
        </th>

    
        <th>
            @Html.DisplayNameFor(model => model.First().Accountid)
        </th>
  
        <th>
            @Html.DisplayNameFor(model => model.First().Balance)
        </th>
  
        <th>
            @Html.DisplayNameFor(model => model.First().TranscationDate)
        </th>
 
        <th>
            @Html.DisplayNameFor(model => model.First().TranscationType)
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <h2>No Records Found!</h2>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelitem => item.TranscationId)
                </th>

        
                <th>
                    @Html.DisplayFor(modelitem => item.Accountid)
                </th>
         
                @Html.DisplayFor(modelitem => item.Balance)
        
                <th>
                    @Html.DisplayFor(modelitem => item.TranscationDate)
                </th>
           
                <th>
                    @Html.DisplayFor(modelitem => item.TranscationType)
                </th>
            </tr>

        }
    }

</table>
@Html.PagedListPager(Model, i => Url.Action("ViewTrans", "Home", new { i, Aid = Request.QueryString["Aid"] }))
